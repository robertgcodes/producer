# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_auth_domain_here
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id_here
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_storage_bucket_here
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id_here
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id_here

# Twitter/X API Configuration (Optional - for Twitter feeds)
# Get these from https://developer.twitter.com
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_BEARER_TOKEN=

# Apify Configuration (Alternative to Twitter API - avoids rate limits)
# Get your API token from https://console.apify.com/account/integrations
APIFY_TOKEN=

# Cron Job Configuration (Optional - for automatic feed refresh)
# Generate a secure random string for CRON_SECRET (e.g., openssl rand -base64 32)
# This is used to secure the cron endpoint from unauthorized access
CRON_SECRET=your_cron_secret_here

# Admin Configuration
# Set this to the email address of the admin user
NEXT_PUBLIC_ADMIN_EMAIL=admin@watcherpro.ai